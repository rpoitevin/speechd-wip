<?xml version="1.0" encoding="utf-8"?>
<schemalist gettext-domain="speech-dispatcher">

  <schema path="/org/freebsoft/speechd/modules/espeak/" id="org.freebsoft.speechd.modules.espeak">

    <!-- Sound Icons -->

    <key name="sound-icon-folder" type="s">
      <_summary>Sound Icon Folder</_summary>
      <_description>
        Espeak  does not currently support playing sound icons
        (audio files that are played by name when an application requests
        a sound icon).  If you have installed the free(b)soft sound-icons
        package, this is the directory where will they be found.  If not
        blank, the espeak Output Module will play them if it finds a
        file whose name matches the sound icon name.  If blank, or no
        matching file is found, the name of the sound icon will be spoken.
      </_description>
      <default>"/usr/share/sounds/sound-icons/"</default>
    </key>

    <key name="sound-icon-volume" type="u">
      <_summary>Sound Icon Volume</_summary>
      <_description>Volume at which sound icons are played.</_description>
      <default>0</default>
    </key>

    <!-- Punctuation -->

    <key name="punctuation-list" type="s">
      <_summary>Punctuation List</_summary>
      <_description>
        Characters to be spoken when punctuation setting is "some"
        Encoding is UTF-8
      </_description>
      <default>"@+_"</default>
    </key>
    
    <key name="capital-pitch-rise" type="u">
      <_summary>Capital Pitch Rise</_summary>
      <_description>
        This values gives the amount in Hz by which the pitch
        of a word raised to indicate it has a capital letter.
      </_description>
      <default>0</default>
    </key>

    <!-- Rate control -->

    <!-- The following options are in words per minute, the same as the
         -s parameter for the -s option in espeak command line tool. -->

    <key name="min-rate" type="u">
      <_summary>Minimum Rate</_summary>
      <_description>
        Minimum rate (-100 in speech-dispatcher)
      </_description>
      <default>80</default>
    </key>

    <key name="normal-rate" type="u">
      <_summary>Normal Rate</_summary>
      <_description>
        Normal rate (0 in speech-dispatcher)
      </_description>
      <default>170</default>
    </key>

    <key name="max-rate" type="u">
      <_summary>Max Rate</_summary>
      <_description>
        Maximum rate (100 in speech-dispatcher)
      </_description>
      <default>390</default>

    </key>

    <!-- Espeak variants -->

    <key name="list-voice-variants" type="b">
      <_summary>List Voice Variants</_summary>
      <_description>
        Controls whether espeak voice variants are presented in the list of
        available voices. A value of 1 will present an espeak voice, plus the
        espeak voice with all the available variants. A value of 0 will present
        the list of espeak voices only.
      </_description>
      <default>false</default>
    </key>

    <!-- Internal parameters -->

    <key name="audio-chunk-size" type="u">
      <_summary>Audio Chunk Size</_summary>
      <_description>
        Number of ms of audio returned by the espeak cal
lback function.
      </_description>
      <default>3000</default>
    </key>

    <key name="audio-queue-max-size" type="u">
      <_summary>Audio Queue Max Size</_summary>
      <_description>
        Maximum number of samples to buffer in playback queue.
      </_description>
      <default>441000</default>
    </key>

    <key name="debug" type="b">
      <_summary>Debug</_summary>
      <_description>
        Whether debugging is enabled in the espeak output module or not.
      </_description>
      <default>false</default>
    </key>

  </schema>

</schemalist>
